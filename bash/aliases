# vi: set ft=sh :

alias reload='source ~/dotfiles/bash/aliases'
alias h=history
alias hgrep='history | grep'

alias l='ls'
alias ll='ls -lh'
alias la='ls -alh'

alias g=git
alias s='git status'
alias d='git diff'
alias dc='git diff --cached'
alias a='git add'
alias c='git commit'

alias eb='vim ~/dotfiles/bash_profile'
alias ev='vim ~/.vimrc'
alias ea='vim -v ~/dotfiles/bash/aliases && reload'
alias eg='vim ~/.gitconfig'

alias dot='cd ~/dotfiles'

alias tls='tmux list-sessions'
ta() {
  tmux attach -t "$1"
}
